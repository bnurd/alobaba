{
  "name": "@akptest/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "bun dist/index.js --port 3200",
    "dev": "bun run --hot src/index.ts --port 3200",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "dependencies": {
    "@akptest/database": "workspace:*",
    "@hono/trpc-server": "^0.3.4",
    "@trpc/server": "^11.1.4",
    "hono": "^4.7.10",
    "superjson": "^2.2.2",
    "zod": "^3.25.34"
  },
  "devDependencies": {
    "@akptest/eslint-config": "workspace:*",
    "@akptest/prettier-config": "workspace:*",
    "@akptest/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "tsc-alias": "^1.8.16"
  },
  "prettier": "@akptest/prettier-config"
}